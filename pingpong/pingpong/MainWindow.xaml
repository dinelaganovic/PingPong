<Window x:Class="pingpong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pingpong"
        mc:Ignorable="d"
         ResizeMode="NoResize"
        Title="MainWindow" Height="400" Width="600" KeyDown="Window_KeyDown" Loaded="Window_Loaded">
    <Border BorderBrush="Bisque" BorderThickness="10">
        <Canvas>
            <Rectangle x:Name="reket2" Width="100" Height="20" Fill="Blue" Canvas.Top="0"/>
            <Ellipse x:Name="lopta" Width="30" Height="30" Fill="Red" Stroke="Black"/>
            <Rectangle x:Name="reket" Width="100" Height="20" Fill="Black" Canvas.Bottom="0"/>
        </Canvas>
    </Border>
</Window>
